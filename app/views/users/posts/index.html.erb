<div id="content">
  <div class="inner">
      <article class="box post post-excerpt">
        <%= flash_messages %>
        <h2>Post List</h2>
        <div class="product-block">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="col-md-2">Title</th>
                <th class="col-md-2">Content</th>
                <th class="col-md-4">Options</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td class="col-md-2"><%= post.title %></td>
                  <td class="col-md-2">$<%= post.content %></td>
                  <td class="col-md-4">
                    <%= link_to 'Show', post_path(post), class: "btn btn-info" %>
                    <%= link_to 'Edit', edit_post_path(post), class: "btn  btn-warning" %>
                    <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <%= link_to 'New Post', new_user_post_path(current_user), class: "btn btn-primary" %>
      </article>
  </div>
</div>
