<div id="content">
  <div class="inner">
      <article class="box post post-excerpt">
        <%= flash_messages %>
        <h2>Post</h2>

        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>

        <p>
          <strong>Content:</strong>
          <%= @post.content %>
        </p>

        <%= link_to 'Edit', edit_post_path(@product), class: "btn btn-warning" %>
        <%= link_to "Back", posts_path, class: "btn btn-default" %>
      </article>
  </div>
</div>
